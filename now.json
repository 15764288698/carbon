{
  "name": "carbon",
  "alias": "carbon.now.sh",
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@now/next@canary" },
    { "src": "api/image/index.js", "use": "@now/node", "config": { "maxLambdaSize": "40mb" } },
    { "src": "api/**/*.js", "use": "@now/node" }
  ],
  "routes": [
    {
      "src": "^/privacy/?",
      "status": 307,
      "headers": {
        "Location": "https://www.notion.so/PRIVACY-POLICY-e9847a7777714eb08ba15a7a8eaee937"
      }
    },
    {
      "src": "^/terms/?",
      "status": 307,
      "headers": {
        "Location": "https://www.notion.so/TERMS-OF-USE-ff2ce22a7e9848c89c6be46b44297583"
      }
    },
    {
      "src": "^/service-worker.js$",
      "dest": "/_next/static/service-worker.js",
      "headers": {
        "Service-Worker-Allowed": "/"
      }
    },
    {
      "src": "/api/user",
      "status": 301,
      "headers": { "Location": "https://api.github.com/user" }
    },
    {
      "src": "/api/oembed",
      "dest": "api/oembed.js",
      "headers": { "Access-Control-Allow-Origin": "*", "Access-Control-Allow-Headers": "*" }
    },
    {
      "src": "/api/twitter",
      "dest": "api/twitter.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/unsplash/download/(?<id>[^/]+)",
      "dest": "api/unsplash/download.js?id=$id",
      "methods": ["GET"]
    },
    {
      "src": "/api/snippets/?(?<id>[^/]*)",
      "dest": "api/snippets.js?id=$id",
      "methods": ["GET", "POST", "PATCH", "DELETE"]
    },
    {
      "src": "/api/unsplash/random",
      "dest": "api/unsplash/random.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/image/?(?<id>[^/]*)",
      "dest": "api/image/index.js?id=$id",
      "methods": ["POST"]
    },
    { "src": "/api/.*", "status": 404 },
    {
      "src": "^/(.*)/?",
      "continue": true,
      "headers": {
        "X-Frame-Options": "SAMEORIGIN",
        "X-XSS-Protection": "1; mode=block",
        "X-Content-Type-Options": "nosniff",
        "Referrer-Policy": "no-referrer-when-downgrade",
        "Feature-Policy": "geolocation 'self'; microphone 'self'; camera 'self'"
      }
    },
    { "handle": "filesystem" }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production",
      "FIREBASE_PROJECT_ID": "@carbon-firebase-project-id",
      "FIREBASE_MESSAGING_SENDER_ID": "@carbon-firebase-messaging-sender-id",
      "FIREBASE_FE_APP_ID": "@carbon-firebase-fe-app-id",
      "FIREBASE_API_KEY": "@carbon-firebase-api-key"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "TWITTER_CONSUMER_KEY": "@twitter-consumer-key",
    "TWITTER_CONSUMER_SECRET": "@twitter-consumer-secret",
    "TWITTER_ACCESS_TOKEN_KEY": "@twitter-access-token-key",
    "TWITTER_ACCESS_TOKEN_SECRET": "@twitter-access-token-secret",
    "LOGS_SECRET_PREFIX": "@logs_secret_prefix",
    "UNSPLASH_SECRET_KEY": "@unsplash_secret_key",
    "UNSPLASH_ACCESS_KEY": "@unsplash_access_key",
    "UNSPLASH_CALLBACK_URL": "@unsplash_callback_url",
    "FIREBASE_PROJECT_ID": "@carbon-firebase-project-id",
    "FIREBASE_PRIVATE_KEY": "@carbon-firebase-private-key"
  },
  "github": {
    "autoAlias": false,
    "silent": true
  }
}
