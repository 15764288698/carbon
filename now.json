{
  "name": "carbon",
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@now/next" },
    { "src": "api/image.js", "use": "@now/node", "config": { "maxLambdaSize": "40mb" } },
    { "src": "api/**/*.js", "use": "@now/node" }
  ],
  "routes": [
    { "src": "^/embed(.*)", "dest": "/embed.html" },
    {
      "src": "^/service-worker.js$",
      "dest": "/_next/static/service-worker.js",
      "headers": {
        "Service-Worker-Allowed": "/"
      }
    },
    {
      "src": "^/static/(.*)",
      "continue": true,
      "headers": {
        "Cache-Control": "public, max-age=43200, immutable"
      }
    },
    {
      "src": "/api/user",
      "status": 301,
      "_comment": "TODO",
      "headers": { "Location": "https://api.github.com/user" }
    },
    {
      "src": "/api/oembed",
      "dest": "api/oembed.js",
      "headers": { "Access-Control-Allow-Origin": "*", "Access-Control-Allow-Headers": "*" }
    },
    {
      "src": "/api/twitter",
      "dest": "api/twitter.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/unsplash/download/(?<id>[^/]*)",
      "dest": "api/unsplash/download.js?id=$id",
      "methods": ["GET"]
    },
    {
      "src": "/api/snippet/?(?<id>[^/]*)",
      "dest": "api/snippet.js?id=$id",
      "methods": ["GET", "POST", "PUT"]
    },
    {
      "src": "/api/unsplash/random",
      "dest": "api/unsplash/random.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/image/?(?<id>[^/]*)",
      "dest": "api/image.js?id=$id",
      "methods": ["POST"]
    },
    {
      "src": "/api/oauth/access_token",
      "dest": "https://github.com/login/oauth/access_token?client_id=dd6d9289c515d34bbe15&client_secret=9f3546a84807d4c52384fd877d310560ee34fa89",
      "methods": ["POST"]
    },
    { "src": "/api/.*", "status": 404 },
    { "handle": "filesystem" },
    {
      "src": "^/(.*)",
      "dest": "/index.html",
      "headers": {
        "X-Frame-Options": "SAMEORIGIN",
        "X-XSS-Protection": "1; mode=block",
        "X-Content-Type-Options": "nosniff",
        "Referrer-Policy": "no-referrer-when-downgrade",
        "Feature-Policy": "geolocation 'self'; microphone 'self'; camera 'self'"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "TWITTER_CONSUMER_KEY": "@twitter-consumer-key",
    "TWITTER_CONSUMER_SECRET": "@twitter-consumer-secret",
    "TWITTER_ACCESS_TOKEN_KEY": "@twitter-access-token-key",
    "TWITTER_ACCESS_TOKEN_SECRET": "@twitter-access-token-secret",
    "LOGS_SECRET_PREFIX": "@logs_secret_prefix",
    "UNSPLASH_SECRET_KEY": "@unsplash_secret_key",
    "UNSPLASH_ACCESS_KEY": "@unsplash_access_key",
    "UNSPLASH_CALLBACK_URL": "@unsplash_callback_url"
  },
  "github": {
    "autoAlias": false,
    "silent": true
  }
}
